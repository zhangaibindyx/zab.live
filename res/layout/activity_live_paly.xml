<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <bf.cloud.hybrid.BFMediaPlayerControllerLive
        android:layout_width="match_parent"
        android:id="@+id/live_player"
        android:layout_height="0dp" 
        android:layout_weight="1">
    </bf.cloud.hybrid.BFMediaPlayerControllerLive>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/live_et_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/live_play_et_message_hint" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/live_btn_send_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/live_play_btn_message_text" />
    </LinearLayout>

</LinearLayout>